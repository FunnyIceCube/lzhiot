                <!-- 定义assembly打包标准 -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>${maven-assembly-plugin.version}</version>
                    <configuration>
                        <appendAssemblyId>false</appendAssemblyId>
                        <finalName>${profile.name}-${project.artifactId}-${project.version}</finalName>
                        <formats>
                            <format>zip</format>
                        </formats>
                    </configuration>
                </plugin>

                <!-- 定义JAR包标准 -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>${maven-jar-plugin.version}</version>
                    <configuration>
                        <archive>
                            <index>false</index>
                            <manifest>
                                <addClasspath>true</addClasspath>
                            </manifest>
                            <manifestEntries>
                                <Specification-Vendor>Hui Club.</Specification-Vendor>
                            </manifestEntries>
                            <manifestSections>
                                <manifestSection>
                                    <name>Build Information</name>
                                    <manifestEntries>
                                        <Project>${project.artifactId}</Project>
                                        <ProjectVersion>${project.version}</ProjectVersion>
                                        <BuildTime>${timestamp}</BuildTime>
                                        <BaseLine>${project.artifactId}-${project.version}-${timestamp}</BaseLine>
                                    </manifestEntries>
                                </manifestSection>
                                <manifestSection>
                                    <name>Job Information</name>
                                    <manifestEntries>
                                        <JobURL>${JOB_URL}</JobURL>
                                        <JobBuildURL>${BUILD_URL}</JobBuildURL>
                                    </manifestEntries>
                                </manifestSection>
                            </manifestSections>
                        </archive>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

    </build>

</project>